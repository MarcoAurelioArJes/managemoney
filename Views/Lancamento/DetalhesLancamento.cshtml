@model LancamentosViewModel
@{
    ViewData["Title"] = "Detalhes Lancamento";
}

<div class="destaque">
    <div class="content">
        <p class="data-lancamento">@Model.DataLancamento.ToShortDateString()</p>
        <p class="valor">@Model.Valor.ToString("C")</p>
        <p class="descricao">@Model.Descricao</p>
        <p class="tipo-lancamento">@Model.TipoDeLancamento</p>
        <p class="categoria">@Model.Categoria</p>
    </div>
</div>


<style>
    .destaque {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: green;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .content {
        text-align: center;
    }

    .content p {
        color: white;
        margin: 10px 0;
    }

    .data-lancamento {
        font-weight: bold;
        font-size: 24px;
    }

    .valor {
        font-size: 32px;
    }

    .descricao {
        font-style: italic;
        font-size: 18px;
    }

    .tipo-lancamento {
        text-transform: uppercase;
        font-size: 18px;
    }

    .categoria {
        text-decoration: underline;
        font-size: 18px;
    }
</style>