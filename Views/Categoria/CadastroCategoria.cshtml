@model CriarCategoriaViewModel

<section id="cadastroCategoria">
    <div id="cadastroCategoria">

     <form asp-controller="categoria" asp-action="criarCategoria" method="post">
		    <div>
			    <!-- Cabecalho Categoria -->
                <div id="cabecalhoCategoria">
                    <h2>
                        Cadastro de Categoria
                    </h2>
                    <div id="divisor"></div>
                </div>

                <div id="formCategoria">

                    <div class="campoCadastroCategoria">
                </div>
		    </div>

          <div class="campoCadastroCategoria">
            <label id="labelCategoria" for="Categoria">Categoria:</label>
            <input type="text" id="inputNome" asp-for="@Model.Nome" placeholder="Nome da categoria" required>    
          </div>

          <div class="divButtonCategoria">
             <button class="ButtonCategoria"> Salvar </button>
          </div>
     </form>
    </div>
</section>
