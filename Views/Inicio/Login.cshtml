@model LoginViewModel

<div id="loginConteudo">

    <section id="sign">

        <section class="cards">

            <!-- Cabecalho Login -->
            <div class="cabecalhoCard">
                <img src="~/img/tela_login/login_icon.png" class="iconSign" alt="">
                <div id="textoCabecalhoLogin">
                    <h2>Bem-vindo!</h2>
                    <p> Faça Login em sua conta</p>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly"></div>

            <form asp-controller="usuario" asp-action="login" id="loginForm" method="post">
                <!-- Campos Login -->
                <div class="campoSign">
                    <label for="inputEmailEntrar">Email</label>
                    <input type="text" id="inputEmailEntrar" asp-for="@Model.Nome" placeholder="exemplo@email.com">
                    <span asp-validation-for="@Model.Nome" class="text-danger"></span>
                </div>
                <div class="campoSign">
                    <label for="inputSenhaEntrar">Senha</label>
                    <input type="password" asp-for="@Model.Senha" id="inputSenhaEntrar"> 
                    <span asp-validation-for="@Model.Senha" class="text-danger"></span>
                </div>
                <div id="loginSettings">
                    <div>
                        <input type="checkbox" id="inputLembrarSenha">
                        <label for="inputLembrarSenha"> Lembrar senha? </label>
                    </div>
                    <a href="#" class="recuperar_senha">Esqueceu a senha?</a>
                </div>
                <div class="divButton">
                    <button type="submit" class="signButton">Entrar</button>
                </div>
                
<!--                <div class="loginOptions">
                    <p>Se preferir, entre com uma rede social: </p>
                    <div id="redesLogin">
                        <a href="">
                            <img src="~/img/tela_login/google_icon.png" class="loginOptionsIcon" alt="Google">
                        </a>
                        <a href="">
                            <img src="~/img//tela_login/facebook_icon.png" class="loginOptionsIcon" alt="facebook">
                        </a>
                        <a href="">
                            <img src="~/img/tela_login/twitter_icon.png" class="loginOptionsIcon" alt="facebook">
                        </a>
                    </div>
                </div>-->
            </form>

        </section>

    </section>
    <section>
        <img src="~/img/tela_login/loginIMG.png" alt="" id="imgLogin">
    </section>

</div>